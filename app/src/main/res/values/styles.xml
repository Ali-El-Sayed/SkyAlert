<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    APP BAR STYLES  -->
    <style name="appBarCityName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onSurface_color</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="appBarTemp" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onSurface_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/yeseva_one_regular</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="appBarTempMeasurements" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onSurface_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/yeseva_one_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="appBarDescription" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onSurface_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="appBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="titleTextColor">@color/text_onSurface_color</item>
        <item name="fontFamily">@font/amaranth_regular</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@drawable/background_glass</item>
    </style>

    <!--    Expanded Toolbar -->
    <style name="expandedToolBar" parent="Widget.Material3.CollapsingToolbar">
        <item name="collapsedTitleGravity">center</item>
        <item name="collapsedTitleTextAppearance">@font/amaranth_regular</item>
        <item name="collapsedTitleTextColor">@color/text_onSurface_color</item>
        <item name="expandedTitleTextAppearance">@font/amaranth_regular</item>
        <item name="expandedTitleTextColor">@color/text_onSurface_color</item>
    </style>

    <!--    Overflow Menu Style -->
    <style name="optionMenuStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/text_onSurface_color</item>
    </style>

    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/text_onSurface_color</item>
        <item name="fontFamily">@font/amaranth_regular</item>
        <item name="titleCentered">true</item>
    </style>

</resources>