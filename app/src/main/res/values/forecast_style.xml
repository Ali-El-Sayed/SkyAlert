<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        This file is used to define styles for the forecast card and the forecast card text.
        The forecast card is used to display the hourly forecast in the HourlyForecastFragment.
        The forecast card text is used to display the temperature and time in the forecast card.
    -->
    <style name="forecastCardText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onLightSurface_color</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="hourlyForecast" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onDarkSurface_color</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="currentWeatherForecast" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_onLightSurface_color</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>